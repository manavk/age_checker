/**
 * Function for age checker form.
 */
function age_checker_form($form,&$form_submit) {
  //day
  $form['day'] = array(
    '#type'          => 'textfield',
    '#size'          => 2,
    '#maxlength'     => 2,
    '#id'            => 'age_checker_day',
    '#weight'        => 1,
    '#attributes'   => array(
      'pattern'     => "[0-9]*",
      'tabindex'    => '1',
      'placeholder' => t('DD'),
      ),
    '#required' => TRUE,
    );
  //month
  $form['month'] = array(
    '#type'          => 'textfield',
    '#size'          => 2,
    '#maxlength'     => 2,
    '#id'            => 'age_checker_month',
    '#weight'        => 2,
    '#attributes'   => array(
      'pattern'     => "[0-9]*",
      'tabindex'    => '2',
      'placeholder' => t('MM'),
      ),
    '#required' => TRUE,
    );
  //year
  $form['year'] = array(
    '#type'          => 'textfield',
    '#size'          => 4,
    '#maxlength'     => 4,
    '#id'            => 'age_checker_year',
    '#weight'        => 3,
    '#attributes' => array(
      'pattern' => "[0-9]*",
      'tabindex' => '3',
      'placeholder' => t('YYYY'),
      ),
    '#required' => TRUE,
    );
  //country list
  $countries = variable_get('countries', '');
  $countries = explode(',', $countries);
    if(count($countries) > 1) {
  $form['list_of_countries'] = array(
    '#type' => 'select',
    '#options' => $countries,
    '#weight' => 1,
    '#required' => TRUE,
    '#attributes' => array(
    'tabindex' => '4',
    ),
  );
    }
  //remember me checkbox
  $option_remember_me = variable_get('option_remember_me', '');
    if ($option_remember_me == 1) {
  $form['remember_me'] = array(
    '#type' => 'checkbox',
    '#weight' => 6,
    '#title' => t('Remember my details (Do not select on shared computers)'),
    '#default_value' => 0,
    '#attributes' => array(
      'tabindex' => '5',
      ),
    );
  }
  //submit button
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => 'submit',
    '#weight' => 7,
    '#attributes' => array(
      'onclick'   => "age_checker.verify();",
      'tabindex' => '6',
    ),
   );
  return $form;
}
