  $uri_logo  = $file_logo->uri;
  //content below logo
  $languages = variable_get('language', 'Please provide values');
  $languages = explode(',', $languages);
   foreach ($languages as $language) {
    $language = trim($language);
    $test_content = variable_get($language . 'content_below_logo', '');
   }
  $form = drupal_get_form('age_checker_form');
  //test case
  $text_one = "This is dummy content";

  return theme('age_checker', 
    array('form' => $form, 
